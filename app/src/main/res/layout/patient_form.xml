<!-- patient_form.xml dosyası -->

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Formun ana düzenini tanımlayan LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_left">

        <!-- Form başlığını gösteren TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:gravity="center"
            android:text="Hasta Bilgileri Formu"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Hasta adını girmek için EditText -->
        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_top"
            android:hint="Hasta Adı"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_left" />

        <!-- Hasta tanısını girmek için EditText -->
        <EditText
            android:id="@+id/diagnosis_edit_text"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_top"
            android:hint="Hasta Tanısı"
            android:inputType="text"
            android:padding="@dimen/padding_left" />

        <!-- Nakil edildiği hastaneyi girmek için EditText -->
        <EditText
            android:id="@+id/from_hospital_edit_text"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_top"
            android:hint="Nakil Edildiği Hastane"
            android:inputType="text"
            android:padding="@dimen/padding_left" />

        <!-- Nakil edileceği hastaneyi girmek için EditText -->
        <EditText
            android:id="@+id/to_hospital_edit_text"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_top"
            android:hint="Nakil Edileceği Hastane"
            android:inputType="text"
            android:padding="@dimen/padding_left" />

        <!-- Nakil tarihini girmek için EditText -->
        <EditText
            android:id="@+id/date_edit_text"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_top"
            android:hint="Nakil Tarihi (GG/AA/YYYY)"
            android:inputType="date"
            android:padding="@dimen/padding_left" />

        <!-- Formu kaydetmek için Button -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/teal_200"
            android:text="Kaydet"
            android:textColor="@color/white" />

        <!-- Formu iptal etmek için Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/teal_200"
            android:text="İptal"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
